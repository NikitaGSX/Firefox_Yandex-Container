{
  "manifest_version": 2,
  "name": "Yandex Container",
  "version": "1.0.0",
  "description": "Yandex Container isolates your Yandex activity from the rest of your web activity in order to prevent Yandex from tracking you outside of the Yandex website via third party cookies.",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "applications": {
    "gecko": {
      "id": "@contain-yandex",
      "strict_min_version": "57.0"
    }
  },
  "homepage_url": "https://github.com/NikitaGSX/Firefox_Yandex-Container",
  "permissions": [
    "<all_urls>",
    "contextualIdentities",
    "cookies",
    "management",
    "tabs",
    "webRequestBlocking",
    "webRequest"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
